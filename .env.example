# Environment Configuration
# Copy this file to .env and fill in your values

# Environment: 'development' or 'production'
ENVIRONMENT=development

# API Configuration
API_KEY=your_secret_api_key_change_this_in_production

# Dashboard Configuration
DASHBOARD_TITLE=Hummingbot Strategy Monitor
REFRESH_INTERVAL=60

# Timezone Configuration
TIMEZONE=Europe/Vienna

# Database Configuration (Development - SQLite)
DB_TYPE_DEV=sqlite
DB_PATH_DEV=/Users/matthias/repos/bot_dashboard/data/database.sqlite

# Database Configuration (Production - MySQL)
DB_TYPE_PROD=mysql
DB_HOST_PROD=your_webhost
DB_NAME_PROD=hummingbot_dashboard
DB_USER_PROD=dashboard_user
DB_PASS_PROD=your_secure_password
DB_CHARSET_PROD=utf8mb4

# Logging
ENABLE_LOGGING=true
LOG_DIRECTORY=./logs/

# NAV Formatting
NAV_DECIMALS=4
